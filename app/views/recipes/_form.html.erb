<%= form_for recipe do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <span>Ingredients:</span>
    <%= f.fields_for :ingredients, recipe.ingredients.build do |ingredient_form| %>
      <%= ingredient_form.label :name %>
      <%= ingredient_form.text_field :name %>
    <% end %>
  </div>

  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>